    <?php echo $this->formSubmit('confirm', 'Závazně objednat', array('class' => 'btn btn-success', 'onclick' => 'return window.confirm(\'Opravdu objednat?\')')) ?>
    <?php else: ?>
    <p class="warning">
        <i class="icon-warning-sign"></i>
        Nemáte dostatečný počet kreditů pro objednávku</p>
    <?php endif ?>
    <?php echo $this->formSubmit('back', 'Zpět', array('class' => 'btn btn-inverse')) ?>
    <?php echo $this->formSubmit('cancel', 'Zrušit', array('class' => 'btn btn-danger')) ?>
    
    
    <?php echo $this->formHidden('variant', $this->variant->getId()) ?>
