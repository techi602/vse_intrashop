<h1>Objednávky</h1>

<table class="tablesorter">
<thead>
    <tr>
    <th>Zboží</th>
    <?php if ($this->warehouseKeeperOrderList) { ?>
    <th>Zaměstnanec</th>
    <?php } ?>
    <th>Datum objednání</th>
    <th>Cena v bodech</th>
    <th>Stav objednávky</th>
    <th>Akce</th>
</tr>
</thead>
<tbody>

<?php if ($orderList) { ?>
<?php foreach($orderList as $order) { ?>
<tr>
    <td>
         <?=$this->escape($order['productName']);?>
    </td>
    <?php if ($this->warehouseKeeperOrderList): ?>
    <td><?= $this->escape($order['orderEmployeeName']);?></td>
    <?php endif ?>
    <td><?= $order['orderInserted']->format('d.m.y H:i');?></td>
    <td><?= $this->escape($order['orderCredits']);?></td>
    <td><?= $this->escape($order['orderStatusName']);?></td>
    <td>
		<?php if ($order['orderCancellable']): ?>
        <a href="<?php echo $this->url(array('action' => 'cancel', 'id' => $order['orderId'])) ?>" class="btn btn-danger">Storno</a>
		<?php endif ?>
        <a class="btn" href="<?php echo $this->url(array('action' => 'detail', 'id' => $order['orderId'])) ?>"><i class="icon-edit"></i> Detail</a>
    </td>
</tr>
<?php } ?>
<?php } else { ?>
<tr>
    <td style="font-style:italic" colspan="<?=$this->userOrderList? 6 : 5 ?>">Žádné objednávky.</td>
